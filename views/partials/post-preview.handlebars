<section class="card">
  <a href="/post/{{id}}">
    <span title="{{user.username}}" class="card-banner">
      <img src="{{resource.url}}" alt="{{resource.title}}"> 
      â€¢ Posted by u/{{user.username}} {{hours_passed created_date}}
    </span>
    <header>
      <h4>{{title}} by {{user.username}}</h4>
    </header>
    
    <div class="card-content">
      {{{shrinkContent content}}}
    </div>
    
    {{!-- <img src="{{resource.url}}" alt="{{resource.title}}"> --}}

    <div class="card-footer">
      <span>Post ID: {{id}}</span>
      <span>Last Modified: {{format_date modified_date}}</span>
    </div>
    
  </a>
</section>
