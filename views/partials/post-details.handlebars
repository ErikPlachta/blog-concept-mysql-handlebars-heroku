<section class="card">
  <a href="/post/{{id}}">
    <banner>Posted by u/{{user.username}} on {{hours_passed created_date}}</banner>
    <header>
      <h4>{{title}} by {{user.username}}</h4>
    </header>
    
    <span>{{{shrinkContent content}}}</span>
    
    {{!-- <img src="{{resource.url}}" alt="{{resource.title}}"> --}}

    <div>
      <span>Post ID: {{id}}</span>
      <span>Last Modified: {{format_date modified_date}}</span>
    </div>
    
  </a>
</section>
