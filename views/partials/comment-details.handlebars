<section class="comment card" data-id="{{id}}" data-userid="{{user.id}}">
  {{!-- <a href="/post/{{id}}"> --}}
    {{!-- <banner>Reply by u/{{user.username}} on {{hours_passed created_date}}</banner> --}}
    <header class="comment-details-header">
      <h4>{{title}} by {{user.username}}</h4>
      <span class="delete-comment"></span>
    </header>
    
    {{!-- TODO:: REMOVE SHRINK --}}
    <span>{{{shrinkContent content}}}</span>
    
    <div class="card-footer">
      <span>Post ID: {{id}}</span>
      • <span>Created: {{format_date created_date}}</span>
      • <span>Last Modified: {{format_date modified_date}}</span>
    </div>
    
  {{!-- </a> --}}
</section>