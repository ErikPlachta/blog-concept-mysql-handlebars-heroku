{{!-- inline styling to simplify inline behavior --}}
<style>
  .activity-feed{display: block;}
</style>

{{!-- If logged in, add section containing a form to create new post --}}
{{#if loggedIn}}
  <section id="create-new-post-section">
    {{!-- TODO:: 04/02/2022 #EP || Make this a modal --}}
    <div class="card section-title">
      <h3>Make a Post</h3>
      {{> post-create}}
    </div>
  </section>
{{else}}


{{/if}}

{{!-- Load a preview of all posts into homepage --}}
<section>
  <div class="card section-title">
    {{#if posts}}
        <h3>{{posts-length}} Posts</h3> 
        <hr />
    {{else}}
      <h3>No Posts to Display</h3>
      <hr />
    {{/if}}
    
    {{#if posts}}
      {{#each posts as |post|}}
          {{> post-preview}}
      {{/each}}
    {{/if}}
   </div>
</section>
